{
    "debug": true,
    "timezone": "America/New_York",
    "forceHTTPS": false,
    "baseURI": "http://localhost/danperron_mvc/samples/blog",
    "basePath":"/danperron_danmvc/samples/blog",
    "modelDir": "./app/model",
    "libDir": "./app/lib",
    "viewDir": "./app/view",
    "logDir": "./app/log",
    "notFoundView": "notFoundView",
    "errorView": "errorView",
    "controllerDir": "./app/controller",
    "routes": [
        {
            "pattern": "/",
            "action": "HomeController@showHome",
            "methods": ["GET"]
        },
        {
            "pattern": "/login",
            "action": "LoginController@showLoginForm",
            "methods": ["GET"]
        },
        {
            "pattern": "/login",
            "action": "LoginController@doLogin",
            "methods": ["POST"]
        },
        {
            "pattern": "/logout",
            "action": "LoginController@doLogout",
            "methods": ["GET", "POST"]
        },
        {
            "pattern": "/createPost",
            "action": "BlogPostController@showCreateBlogPostForm",
            "methods": ["GET"]
        },
        {
            "pattern": "/createPost",
            "action": "BlogPostController@doCreateBlogPost",
            "methods": ["POST"]
        },
        {
            "pattern": "/posts/:postId",
            "action": "BlogPostController@viewBlogPost",
            "methods": ["GET"]
        },
        {
            "pattern": "/posts/:postId/delete",
            "action": "BlogPostController@deletePost",
            "methods": ["GET", "POST"]
        },
        {
            "pattern": "/posts/:postId/edit",
            "action": "BlogPostController@showEditPost",
            "methods": ["GET"]
        },
        {
            "pattern": "/posts/:postId/edit",
            "action": "BlogPostController@doEditPost",
            "methods": ["POST"]
        },
        {
            "pattern": "/category/:categoryName",
            "action": "BlogPostController@listByCategory",
            "methods": ["GET"]
        }
    ]
}